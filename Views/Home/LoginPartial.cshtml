@using DNC567.Models
@model LoginUser

<form asp-action="Login" asp-controller="Home">
    <div class="form-group">
        <span asp-validation-for="LoginEmail"></span><br>
        <label asp-for="LoginEmail"></label><br>
        <input class="form-control" asp-for="LoginEmail">
    </div>
    <div class="form-group">
        <span asp-validation-for="LoginPassword"></span><br>
        <label asp-for="LoginPassword"></label><br>
        <input class="form-control asp-for="LoginPassword">
    </div>
    <div class="form-group">
        <input type="submit" value="Login">
    </div>
</form>