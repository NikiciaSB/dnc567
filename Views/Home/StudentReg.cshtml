@using DNC567.Models
@model Student

<form asp-action="RegisterStudent" asp-controller="Home">
    <h3 class="about">Register as a Student</h3>
    <div class="form-group">
        <span asp-validation-for="FirstName"></span><br>
        <label asp-for="FirstName"></label><br>
        <input class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName"></span><br>
        <label asp-for="LastName"></label><br>
        <input class="form-control" asp-for="LastName">
    </div>
    <div class="form-group">
        <span asp-validation-for="Email"></span><br>
        <label asp-for="Email"></label><br>
        <input class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <span asp-validation-for="Password"></span><br>
        <label asp-for="Password"></label><br>
        <input class="form-control" asp-for="Password">
    </div>
    <div class="form-group">
        <span asp-validation-for="ConfirmPassword"></span><br>
        <label asp-for="ConfirmPassword"></label><br>
        <input class="form-control" asp-for="ConfirmPassword">
    </div>
    <div class="form-group">
        <span asp-validation-for="NickName"></span><br>
        <label asp-for="NickName"></label><br>
        <input class="form-control" asp-for="NickName">
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Register Student">
    </div>
</form>