@using DNC567.Models
@model Instructor

<form asp-action="RegisterInstructor" asp-controller="Home">
    <h3 class="certi">Register as an Instructor</h3>
    <div class="form-group">
        <span asp-validation-for="FirstName"></span><br>
        <label asp-for="FirstName"></label><br>
        <input class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName"></span><br>
        <label asp-for="LastName"></label><br>
        <input class="form-control" asp-for="LastName">
    </div>
    <div class="form-group">
        <span asp-validation-for="Email"></span><br>
        <label asp-for="Email"></label><br>
        <input class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <span asp-validation-for="Password"></span><br>
        <label asp-for="Password"></label><br>
        <input class="form-control" asp-for="Password">
    </div>
    <div class="form-group">
        <span asp-validation-for="ConfirmPassword"></span><br>
        <label asp-for="ConfirmPassword"></label><br>
        <input class="form-control" asp-for="ConfirmPassword">
    </div>
    <div class="form-group">
        <span asp-validation-for="InstructorName"></span><br>
        <label asp-for="InstructorName"></label><br>
        <input class="form-control" asp-for="InstructorName">
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Register Instructor">
    </div>
</form>